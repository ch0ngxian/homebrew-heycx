#!/bin/bash

# heycx - Opinionated utility toolkit that makes developer life better
# Usage: heycx <command> [subcommand]

set -e  # Exit on error

VERSION="1.0.0"

# ============================================================================
# Common utilities
# ============================================================================

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m' # No Color

print_error() {
    echo -e "${RED}ERROR: $1${NC}"
}

print_success() {
    echo -e "${GREEN}✓ $1${NC}"
}

print_info() {
    echo -e "${YELLOW}➜ $1${NC}"
}

# Step progress variables
TOTAL_STEPS=0
CURRENT_STEP=0

print_step() {
    ((CURRENT_STEP++))
    echo ""
    echo -e "${YELLOW}[${CURRENT_STEP}/${TOTAL_STEPS}] $1${NC}"
}

# Global variable to store command output for summary extraction
CMD_OUTPUT=""
TAIL_LINES=5

# Function to run command with live tail output and capture result
run_cmd() {
    local tmp_file=$(mktemp)

    # Run command, output to temp file
    "$@" > "$tmp_file" 2>&1 &
    local cmd_pid=$!

    # Show live tail of output
    tail -n $TAIL_LINES -f "$tmp_file" 2>/dev/null &
    local tail_pid=$!

    # Wait for command to finish
    wait $cmd_pid
    local exit_code=$?

    # Small delay to let tail catch up
    sleep 0.1

    # Kill tail process
    kill $tail_pid 2>/dev/null
    wait $tail_pid 2>/dev/null

    # Count lines shown and clear them
    local lines_shown=$(wc -l < "$tmp_file")
    if [ "$lines_shown" -gt "$TAIL_LINES" ]; then
        lines_shown=$TAIL_LINES
    fi

    # Move cursor up and clear the tail output
    for ((i=0; i<lines_shown; i++)); do
        printf "\033[1A\033[2K"
    done

    # Store output for summary extraction
    CMD_OUTPUT=$(cat "$tmp_file")
    rm -f "$tmp_file"

    return $exit_code
}

# ============================================================================
# Summary extraction helpers
# ============================================================================

parse_push_stats() {
    local output="$1"
    local objects=$(echo "$output" | grep -oE 'Total [0-9]+' | head -1 | grep -oE '[0-9]+')
    local bytes=$(echo "$output" | grep -oE '[0-9.]+ (KiB|bytes)' | head -1)

    if [ -n "$objects" ]; then
        if [ -n "$bytes" ]; then
            echo "$objects objects, $bytes"
        else
            echo "$objects objects"
        fi
    else
        echo ""
    fi
}

parse_pull_stats() {
    local output="$1"
    if echo "$output" | grep -q "Fast-forward"; then
        local commits=$(echo "$output" | grep -oE 'by [0-9]+ commits' | head -1 | grep -oE '[0-9]+')
        if [ -n "$commits" ]; then
            echo "fast-forward, $commits commits"
        else
            echo "fast-forward"
        fi
    elif echo "$output" | grep -q "Already up to date"; then
        echo "already up to date"
    else
        echo ""
    fi
}

parse_merge_stats() {
    local output="$1"
    local files=$(echo "$output" | grep -oE '[0-9]+ files? changed' | head -1)
    local insertions=$(echo "$output" | grep -oE '[0-9]+ insertions?\(\+\)' | head -1 | grep -oE '[0-9]+')
    local deletions=$(echo "$output" | grep -oE '[0-9]+ deletions?\(-\)' | head -1 | grep -oE '[0-9]+')

    if [ -n "$files" ]; then
        local result="$files"
        if [ -n "$insertions" ]; then
            result="$result, +$insertions"
        fi
        if [ -n "$deletions" ]; then
            result="$result -$deletions"
        fi
        echo "$result"
    else
        echo ""
    fi
}

# ============================================================================
# Git helpers
# ============================================================================

check_uncommitted_changes() {
    if [[ -n $(git status -s) ]]; then
        return 0  # Has changes
    else
        return 1  # No changes
    fi
}

branch_exists() {
    git show-ref --verify --quiet refs/heads/$1
}

require_clean_working_tree() {
    if check_uncommitted_changes; then
        print_error "You have uncommitted changes. Please commit or stash them first."
        git status -s
        exit 1
    fi
}

# ============================================================================
# Commands
# ============================================================================

cmd_hotfix_start() {
    TOTAL_STEPS=7
    CURRENT_STEP=0

    # Prompt for hotfix name
    echo -e "${CYAN}${BOLD}heycx hotfix start${NC}"
    echo ""
    read -p "Enter hotfix name: " HOTFIX_NAME

    if [ -z "$HOTFIX_NAME" ]; then
        print_error "Hotfix name cannot be empty"
        exit 1
    fi

    HOTFIX_BRANCH="hotfix/$HOTFIX_NAME"

    # Check if we have uncommitted changes to stash
    HAS_CHANGES=false
    if check_uncommitted_changes; then
        HAS_CHANGES=true
        print_info "Detected uncommitted changes"
        git status -s
        echo ""
    fi

    # Confirm action
    print_info "This will:"
    echo "  1. Stash current changes (if any)"
    echo "  2. Fetch latest changes from remote"
    echo "  3. Update master and develop branches"
    echo "  4. Create hotfix branch '$HOTFIX_BRANCH' from master"
    echo "  5. Apply stashed changes (if any)"
    echo "  6. Push branch to remote"
    echo ""
    read -p "Do you want to continue? (y/N): " -n 1 -r
    echo ""
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        print_error "Aborted by user"
        exit 1
    fi

    # Step 1: Stash changes if any
    print_step "Stashing current changes"
    if [ "$HAS_CHANGES" = true ]; then
        if run_cmd git stash push -m "Temp stash for hotfix: $HOTFIX_BRANCH"; then
            print_success "Stashed changes"
        else
            print_error "Failed to stash changes"
            echo "$CMD_OUTPUT"
            exit 1
        fi
    else
        print_success "Skipped (no changes to stash)"
    fi

    # Step 2: Fetch from remote
    print_step "Fetching latest changes from remote"
    if run_cmd git fetch origin; then
        print_success "Fetched from origin"
    else
        print_error "Failed to fetch from origin"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    # Step 3: Update master branch
    print_step "Updating master branch"
    git checkout master > /dev/null 2>&1
    if run_cmd git pull origin master; then
        pull_stats=$(parse_pull_stats "$CMD_OUTPUT")
        if [ -n "$pull_stats" ]; then
            print_success "Updated master ($pull_stats)"
        else
            print_success "Updated master"
        fi
    else
        print_error "Failed to update master"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    # Step 4: Update develop branch
    print_step "Updating develop branch"
    if branch_exists develop; then
        git checkout develop > /dev/null 2>&1
    else
        git checkout -b develop origin/develop > /dev/null 2>&1
    fi
    if run_cmd git pull origin develop; then
        pull_stats=$(parse_pull_stats "$CMD_OUTPUT")
        if [ -n "$pull_stats" ]; then
            print_success "Updated develop ($pull_stats)"
        else
            print_success "Updated develop"
        fi
    else
        print_error "Failed to update develop"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    # Step 5: Create hotfix branch from master
    print_step "Creating hotfix branch"
    git checkout master > /dev/null 2>&1
    if git checkout -b "$HOTFIX_BRANCH" > /dev/null 2>&1; then
        print_success "Created $HOTFIX_BRANCH from master"
    else
        print_error "Failed to create branch $HOTFIX_BRANCH"
        exit 1
    fi

    # Step 6: Apply stashed changes if any
    print_step "Applying stashed changes"
    if [ "$HAS_CHANGES" = true ]; then
        if run_cmd git stash pop; then
            print_success "Applied stashed changes"
        else
            print_error "Failed to apply stashed changes"
            print_error "Please resolve conflicts manually"
            echo "$CMD_OUTPUT"
            exit 1
        fi
    else
        print_success "Skipped (no changes to apply)"
    fi

    # Step 7: Push branch to remote
    print_step "Pushing branch to remote"
    if run_cmd git push -u origin "$HOTFIX_BRANCH"; then
        push_stats=$(parse_push_stats "$CMD_OUTPUT")
        if [ -n "$push_stats" ]; then
            print_success "Pushed $HOTFIX_BRANCH ($push_stats)"
        else
            print_success "Pushed $HOTFIX_BRANCH"
        fi
    else
        print_error "Failed to push branch"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    echo ""
    print_success "Hotfix branch '$HOTFIX_BRANCH' created and pushed successfully!"
    if [ "$HAS_CHANGES" = true ]; then
        print_info "Your changes have been applied but not committed"
        print_info "Review your changes and commit them manually"
    fi
    print_info "Current branch: $(git rev-parse --abbrev-ref HEAD)"
}

cmd_hotfix_finish() {
    TOTAL_STEPS=8
    CURRENT_STEP=0

    echo -e "${CYAN}${BOLD}heycx hotfix finish${NC}"
    echo ""

    # Get current branch
    CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)
    print_info "Current branch: $CURRENT_BRANCH"

    # Verify it's a hotfix branch
    if [[ ! "$CURRENT_BRANCH" =~ ^hotfix/ ]]; then
        print_error "Current branch is not a hotfix branch (must start with 'hotfix/')"
        exit 1
    fi

    # Check for uncommitted changes
    require_clean_working_tree

    # Show what will be done
    echo ""
    print_info "This will:"
    echo "  1. Fetch latest changes from remote"
    echo "  2. Merge '$CURRENT_BRANCH' into 'master'"
    echo "  3. Merge 'master' into 'develop'"
    echo "  4. Push 'master' and 'develop' to remote"
    echo ""

    # Step 1: Fetch from remote
    print_step "Fetching latest changes from remote"
    if run_cmd git fetch origin; then
        print_success "Fetched from origin"
    else
        print_error "Failed to fetch from origin"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    # Step 2: Update local master
    print_step "Updating local master branch"
    git checkout master > /dev/null 2>&1
    if run_cmd git pull origin master; then
        local_stats=$(parse_pull_stats "$CMD_OUTPUT")
        if [ -n "$local_stats" ]; then
            print_success "Updated master ($local_stats)"
        else
            print_success "Updated master"
        fi
    else
        print_error "Failed to update master"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    # Step 3: Merge hotfix into master
    print_step "Merging hotfix into master"
    if run_cmd git merge --no-ff "$CURRENT_BRANCH" -m "Merge $CURRENT_BRANCH into master"; then
        merge_stats=$(parse_merge_stats "$CMD_OUTPUT")
        if [ -n "$merge_stats" ]; then
            print_success "Merged $CURRENT_BRANCH → master ($merge_stats)"
        else
            print_success "Merged $CURRENT_BRANCH → master"
        fi
    else
        print_error "Failed to merge $CURRENT_BRANCH into master"
        print_error "Please resolve conflicts manually"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    # Step 4: Update local develop
    print_step "Updating local develop branch"
    if branch_exists develop; then
        git checkout develop > /dev/null 2>&1
    else
        git checkout -b develop origin/develop > /dev/null 2>&1
    fi
    if run_cmd git pull origin develop; then
        local_stats=$(parse_pull_stats "$CMD_OUTPUT")
        if [ -n "$local_stats" ]; then
            print_success "Updated develop ($local_stats)"
        else
            print_success "Updated develop"
        fi
    else
        print_error "Failed to update develop"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    # Step 5: Merge master into develop
    print_step "Merging master into develop"
    if run_cmd git merge --no-ff master -m "Merge master into develop (from $CURRENT_BRANCH)"; then
        merge_stats=$(parse_merge_stats "$CMD_OUTPUT")
        if [ -n "$merge_stats" ]; then
            print_success "Merged master → develop ($merge_stats)"
        else
            print_success "Merged master → develop"
        fi
    else
        print_error "Failed to merge master into develop"
        print_error "Please resolve conflicts manually"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    # Step 6: Push master and trigger deployment
    print_step "Pushing master and triggering deployment"
    if run_cmd git push origin master; then
        push_stats=$(parse_push_stats "$CMD_OUTPUT")

        # Try to trigger deployment workflow
        WORKFLOW=$(gh workflow list 2>/dev/null | grep -i "prod" | grep -i "deployment" | head -n 1 | awk '{sub(/[[:space:]]+(active|disabled|state).*/, ""); print}')
        deploy_msg=""
        if [ -n "$WORKFLOW" ]; then
            if gh workflow run "$WORKFLOW" --ref master > /dev/null 2>&1; then
                deploy_msg=" · Triggered deployment"
            fi
        fi

        if [ -n "$push_stats" ]; then
            print_success "Pushed master ($push_stats)$deploy_msg"
        else
            print_success "Pushed master$deploy_msg"
        fi
    else
        print_error "Failed to push master"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    # Step 7: Push develop
    print_step "Pushing develop"
    if run_cmd git push origin develop; then
        push_stats=$(parse_push_stats "$CMD_OUTPUT")
        if [ -n "$push_stats" ]; then
            print_success "Pushed develop ($push_stats)"
        else
            print_success "Pushed develop"
        fi
    else
        print_error "Failed to push develop"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    # Step 8: Clean up hotfix branch
    print_step "Cleaning up hotfix branch"
    git checkout master > /dev/null 2>&1
    git branch -d "$CURRENT_BRANCH" > /dev/null 2>&1
    if run_cmd git push origin --delete "$CURRENT_BRANCH"; then
        print_success "Deleted $CURRENT_BRANCH (local + remote)"
    else
        # Local delete succeeded, remote might have already been deleted
        print_success "Deleted $CURRENT_BRANCH (local)"
    fi

    echo ""
    print_success "Hotfix workflow completed successfully!"
    print_info "Current branch: $(git rev-parse --abbrev-ref HEAD)"
}

cmd_sync() {
    TOTAL_STEPS=6
    CURRENT_STEP=0

    echo -e "${CYAN}${BOLD}heycx sync${NC}"
    echo ""

    # Store original branch
    ORIGINAL_BRANCH=$(git rev-parse --abbrev-ref HEAD)

    # Check if we have uncommitted changes to stash
    HAS_CHANGES=false
    if check_uncommitted_changes; then
        HAS_CHANGES=true
        print_info "Detected uncommitted changes"
        git status -s
        echo ""
    fi

    print_info "This will pull the latest master and develop branches"
    echo ""

    # Step 1: Stash changes if any
    print_step "Stashing current changes"
    if [ "$HAS_CHANGES" = true ]; then
        if run_cmd git stash push -m "Temp stash for sync"; then
            print_success "Stashed changes"
        else
            print_error "Failed to stash changes"
            echo "$CMD_OUTPUT"
            exit 1
        fi
    else
        print_success "Skipped (no changes to stash)"
    fi

    # Step 2: Fetch from remote
    print_step "Fetching latest changes from remote"
    if run_cmd git fetch origin; then
        print_success "Fetched from origin"
    else
        print_error "Failed to fetch from origin"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    # Step 3: Update master branch
    print_step "Updating master branch"
    git checkout master > /dev/null 2>&1
    if run_cmd git pull origin master; then
        pull_stats=$(parse_pull_stats "$CMD_OUTPUT")
        if [ -n "$pull_stats" ]; then
            print_success "Updated master ($pull_stats)"
        else
            print_success "Updated master"
        fi
    else
        print_error "Failed to update master"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    # Step 4: Update develop branch
    print_step "Updating develop branch"
    if branch_exists develop; then
        git checkout develop > /dev/null 2>&1
    else
        git checkout -b develop origin/develop > /dev/null 2>&1
    fi
    if run_cmd git pull origin develop; then
        pull_stats=$(parse_pull_stats "$CMD_OUTPUT")
        if [ -n "$pull_stats" ]; then
            print_success "Updated develop ($pull_stats)"
        else
            print_success "Updated develop"
        fi
    else
        print_error "Failed to update develop"
        echo "$CMD_OUTPUT"
        exit 1
    fi

    # Step 5: Return to original branch
    print_step "Returning to original branch"
    if git checkout "$ORIGINAL_BRANCH" > /dev/null 2>&1; then
        print_success "Switched to $ORIGINAL_BRANCH"
    else
        print_error "Failed to switch to $ORIGINAL_BRANCH"
        exit 1
    fi

    # Step 6: Apply stashed changes if any
    print_step "Applying stashed changes"
    if [ "$HAS_CHANGES" = true ]; then
        if run_cmd git stash pop; then
            print_success "Applied stashed changes"
        else
            print_error "Failed to apply stashed changes"
            print_error "Please resolve conflicts manually"
            echo "$CMD_OUTPUT"
            exit 1
        fi
    else
        print_success "Skipped (no changes to apply)"
    fi

    echo ""
    print_success "Successfully updated master and develop branches!"
    print_info "Current branch: $(git rev-parse --abbrev-ref HEAD)"
}

cmd_docker_enter() {
    local cname="$1"

    if [ -z "$cname" ]; then
        print_error "Usage: heycx docker enter <name-part>"
        exit 1
    fi

    local result
    result=$(docker ps --format "{{.ID}} {{.Names}}" | grep -i "$cname" | head -n 1)

    if [ -z "$result" ]; then
        print_error "No container matching: $cname"
        exit 1
    fi

    local cid cname_full
    read cid cname_full <<< "$result"

    print_info "Entering: $cname_full ($cid)"

    # Try shells in order: zsh -> bash -> sh
    if docker exec "$cid" which zsh >/dev/null 2>&1; then
        docker exec -it "$cid" zsh
    elif docker exec "$cid" which bash >/dev/null 2>&1; then
        docker exec -it "$cid" bash
    else
        docker exec -it "$cid" sh
    fi
}

show_help() {
    echo -e "${CYAN}${BOLD}heycx${NC} - Opinionated utility toolkit v${VERSION}"
    echo ""
    echo "Usage: heycx <command> [subcommand]"
    echo ""
    echo "Commands:"
    echo "  ${BOLD}hotfix start${NC}     Start a new hotfix branch"
    echo "  ${BOLD}hotfix finish${NC}    Complete hotfix (merge to master & develop)"
    echo "  ${BOLD}sync${NC}             Update master & develop branches"
    echo "  ${BOLD}docker enter${NC}     Enter a running Docker container by name"
    echo ""
    echo "Examples:"
    echo "  heycx hotfix start      # Prompts for name, creates hotfix/<name>"
    echo "  heycx hotfix finish     # Merges current hotfix branch"
    echo "  heycx sync              # Pull latest master & develop"
    echo "  heycx docker enter api  # Enter container matching 'api'"
    echo ""
    echo "https://github.com/ch0ngxian/homebrew-heycx"
}

show_hotfix_help() {
    echo -e "${CYAN}${BOLD}heycx hotfix${NC} - Hotfix workflow commands"
    echo ""
    echo "Usage: heycx hotfix <subcommand>"
    echo ""
    echo "Subcommands:"
    echo "  ${BOLD}start${NC}     Start a new hotfix branch from master"
    echo "  ${BOLD}finish${NC}    Complete hotfix (merge to master & develop)"
    echo ""
    echo "Examples:"
    echo "  heycx hotfix start      # Prompts for name, creates hotfix/<name>"
    echo "  heycx hotfix finish     # Merges current hotfix branch"
}

show_docker_help() {
    echo -e "${CYAN}${BOLD}heycx docker${NC} - Docker utility commands"
    echo ""
    echo "Usage: heycx docker <subcommand> [args]"
    echo ""
    echo "Subcommands:"
    echo "  ${BOLD}enter${NC}     Enter a running container by name"
    echo ""
    echo "Examples:"
    echo "  heycx docker enter api  # Enter container matching 'api'"
}

# ============================================================================
# Command routing
# ============================================================================

case "${1:-}" in
    hotfix)
        case "${2:-}" in
            start)
                cmd_hotfix_start
                ;;
            finish)
                cmd_hotfix_finish
                ;;
            *)
                show_hotfix_help
                ;;
        esac
        ;;
    sync)
        cmd_sync
        ;;
    docker)
        case "${2:-}" in
            enter)
                cmd_docker_enter "$3"
                ;;
            *)
                show_docker_help
                ;;
        esac
        ;;
    --version|-v)
        echo "heycx version $VERSION"
        ;;
    --help|-h|"")
        show_help
        ;;
    *)
        print_error "Unknown command: $1"
        echo ""
        show_help
        exit 1
        ;;
esac
