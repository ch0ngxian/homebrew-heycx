#!/bin/bash

# Script to pull latest master and develop branches
# Usage: ./pull-branches

set -e  # Exit on error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored messages
print_error() {
    echo -e "${RED}ERROR: $1${NC}"
}

print_success() {
    echo -e "${GREEN}✓ $1${NC}"
}

print_info() {
    echo -e "${YELLOW}➜ $1${NC}"
}

# Step progress variables
TOTAL_STEPS=6
CURRENT_STEP=0

# Function to print step progress
print_step() {
    ((CURRENT_STEP++))
    echo ""
    echo -e "${YELLOW}[${CURRENT_STEP}/${TOTAL_STEPS}] $1${NC}"
}

# Global variable to store command output for summary extraction
CMD_OUTPUT=""
TAIL_LINES=5

# Function to run command with live tail output and capture result
run_cmd() {
    local tmp_file=$(mktemp)

    # Run command, output to temp file
    "$@" > "$tmp_file" 2>&1 &
    local cmd_pid=$!

    # Show live tail of output
    tail -n $TAIL_LINES -f "$tmp_file" 2>/dev/null &
    local tail_pid=$!

    # Wait for command to finish
    wait $cmd_pid
    local exit_code=$?

    # Small delay to let tail catch up
    sleep 0.1

    # Kill tail process
    kill $tail_pid 2>/dev/null
    wait $tail_pid 2>/dev/null

    # Count lines shown and clear them
    local lines_shown=$(wc -l < "$tmp_file")
    if [ "$lines_shown" -gt "$TAIL_LINES" ]; then
        lines_shown=$TAIL_LINES
    fi

    # Move cursor up and clear the tail output
    for ((i=0; i<lines_shown; i++)); do
        printf "\033[1A\033[2K"
    done

    # Store output for summary extraction
    CMD_OUTPUT=$(cat "$tmp_file")
    rm -f "$tmp_file"

    return $exit_code
}

# Summary extraction helper
parse_pull_stats() {
    local output="$1"
    if echo "$output" | grep -q "Fast-forward"; then
        local commits=$(echo "$output" | grep -oE 'by [0-9]+ commits' | head -1 | grep -oE '[0-9]+')
        if [ -n "$commits" ]; then
            echo "fast-forward, $commits commits"
        else
            echo "fast-forward"
        fi
    elif echo "$output" | grep -q "Already up to date"; then
        echo "already up to date"
    else
        echo ""
    fi
}

# Function to check if there are uncommitted changes
check_uncommitted_changes() {
    if [[ -n $(git status -s) ]]; then
        return 0  # Has changes
    else
        return 1  # No changes
    fi
}

# Function to check if branch exists
branch_exists() {
    git show-ref --verify --quiet refs/heads/$1
}

# Store original branch
ORIGINAL_BRANCH=$(git rev-parse --abbrev-ref HEAD)

# Check if we have uncommitted changes to stash
HAS_CHANGES=false
if check_uncommitted_changes; then
    HAS_CHANGES=true
    print_info "Detected uncommitted changes"
    git status -s
    echo ""
fi

print_info "This will pull the latest master and develop branches"
echo ""

# Step 1: Stash changes if any
print_step "Stashing current changes"
if [ "$HAS_CHANGES" = true ]; then
    if run_cmd git stash push -m "Temp stash for pull-branches"; then
        print_success "Stashed changes"
    else
        print_error "Failed to stash changes"
        echo "$CMD_OUTPUT"
        exit 1
    fi
else
    print_success "Skipped (no changes to stash)"
fi

# Step 2: Fetch from remote
print_step "Fetching latest changes from remote"
if run_cmd git fetch origin; then
    print_success "Fetched from origin"
else
    print_error "Failed to fetch from origin"
    echo "$CMD_OUTPUT"
    exit 1
fi

# Step 3: Update master branch
print_step "Updating master branch"
git checkout master > /dev/null 2>&1
if run_cmd git pull origin master; then
    pull_stats=$(parse_pull_stats "$CMD_OUTPUT")
    if [ -n "$pull_stats" ]; then
        print_success "Updated master ($pull_stats)"
    else
        print_success "Updated master"
    fi
else
    print_error "Failed to update master"
    echo "$CMD_OUTPUT"
    exit 1
fi

# Step 4: Update develop branch
print_step "Updating develop branch"
if branch_exists develop; then
    git checkout develop > /dev/null 2>&1
else
    git checkout -b develop origin/develop > /dev/null 2>&1
fi
if run_cmd git pull origin develop; then
    pull_stats=$(parse_pull_stats "$CMD_OUTPUT")
    if [ -n "$pull_stats" ]; then
        print_success "Updated develop ($pull_stats)"
    else
        print_success "Updated develop"
    fi
else
    print_error "Failed to update develop"
    echo "$CMD_OUTPUT"
    exit 1
fi

# Step 5: Return to original branch
print_step "Returning to original branch"
if git checkout "$ORIGINAL_BRANCH" > /dev/null 2>&1; then
    print_success "Switched to $ORIGINAL_BRANCH"
else
    print_error "Failed to switch to $ORIGINAL_BRANCH"
    exit 1
fi

# Step 6: Apply stashed changes if any
print_step "Applying stashed changes"
if [ "$HAS_CHANGES" = true ]; then
    if run_cmd git stash pop; then
        print_success "Applied stashed changes"
    else
        print_error "Failed to apply stashed changes"
        print_error "Please resolve conflicts manually"
        echo "$CMD_OUTPUT"
        exit 1
    fi
else
    print_success "Skipped (no changes to apply)"
fi

echo ""
print_success "Successfully updated master and develop branches!"
print_info "Current branch: $(git rev-parse --abbrev-ref HEAD)"
